{% extends 'pages/base.jinja' %}

{% block title %}
    Vehicle List
{% endblock %}

{% block content %}

<section id="vehicle_list">
    <h1>Your Vehicles</h1>

    {% if vehicles %}
        <ul>
        {% for vehicle in vehicles %}
            <li>
                <a role="button" href="/vehicle/{{ vehicle.id }}">
                    <strong>{{ vehicle.make }} {{ vehicle.model }}</strong>
                    ({{ vehicle.year }})
                </a>
                <form action="/vehicle/{{ vehicle.id }}" method="POST">
                    <input type="hidden" name="vehicle.id" value="{{ vehicle.id }}">
                    <button>
                        Delete
                    </button>
                </form>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <p>You have no vehicles added yet.</p>
    {% endif %}
</section>

{% endblock %}
